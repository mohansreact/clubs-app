<% include ../partials/header%>

 <div class="container">
     <header class="jumbotron">
         <div class="container">
             <h1>Welcome To YelpClubs Page!</h1>
             <p>Top European leauge grounds from all over the world</p>
             <p>
                <a class="btn btn-primary btn-large" href="/grounds/new">Add New Campground</a>
             </p>
         </div>
     </header>
     
     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% grounds.forEach(function(ground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img src="<%= ground.image %>">
                   <div class="caption">
                       <h4><%= ground.name %></h4>
                   </div>
                   <p>
                       <a href="/grounds/<%= ground._id%>" class="btn btn-primary">Info</a>
                   </p>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<% include ../partials/footer%>
